<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Container for list name input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_background">

        <EditText
            android:id="@+id/etListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="List Name"
            android:background="@android:color/transparent"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Container for trip type input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background">

        <EditText
            android:id="@+id/etTripType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip Type (E.g., beach, business, etc.)"
            android:background="@android:color/transparent"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Container for destination input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background">

        <EditText
            android:id="@+id/etDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination"
            android:background="@android:color/transparent"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Container for duration input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background">

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (days)"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Container for departure date input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background">

        <EditText
            android:id="@+id/etDepartureDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip date"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:background="@android:color/transparent"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Save button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save List"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/colorOnPrimary"
        android:elevation="4dp" />

    <!-- Delete button -->
    <Button
        android:id="@+id/btnDeleteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete List"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:backgroundTint="@color/alertBackground"
        android:textColor="@color/colorOnPrimary"
        android:visibility="gone"
        android:elevation="4dp" />
</LinearLayout>
